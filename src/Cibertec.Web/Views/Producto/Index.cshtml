@model IEnumerable<Cibertec.Models.Producto>
<h2>Listado de Productos</h2>
@Html.ActionLink("Nuevo Producto", "Create","Producto")
<table class="table">
    <tr>
        <td>Id</td>
        <td>Descripcion</td>
        <td>Stock Minimo</td>
        <td>Fecha de Registro</td>
        <td>Acciones</td>
    </tr>
   @foreach (var item in Model)
   {
    
    <tr>
        <td>@item.Id</td>
        <td>@item.Descripcion</td>
        <td>@item.StockMinimo</td>
        <td>@item.FechaRegistro</td>
        <td>
            <a href='@Url.Action("Edit", "Producto" , new { id=@item.Id })'>
            <i class="glyphicon glyphicon-edit">
            </i></a>
            <a href='#delete' data-toggle="modal">
            <i class="glyphicon glyphicon-trash">
           </i></a>

            <div class="modal fade" id='delete'>
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header">
                            <button tyle="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Desea Eliminar el Producto</h4>
                        </div>

                        <div class="modal-body">
                            Id:
                            <h4>@item.Id</h4>
                            Descripcion:
                            <h4>@item.Descripcion</h4>
                            Stock:
                            <h4>@item.StockMinimo</h4>
                            Fecha de Registro:
                            <h4>@item.FechaRegistro</h4>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" data-dismiss="modal" onclick="location='/Producto/Delete/@item.Id'">Borrar</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                        </div>

                    </div>
                </div>
            </div>

        </td>
    </tr>
    
   }

</table>

